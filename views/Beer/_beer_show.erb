<script type="text/template" id="beer-show-template">

	<%= erb :"navigation/_page_navigation" %>

	<div class="sticky-beer-background">
		<div class="profile-image" style="background-image: url(<%%= image %>)"></div>
		<h1><%%= name %></h1></br>
		<span class="brewery-location"><i><%%= brewery_name %></i></span>
		<p>Style: <i><%%= style %></i></p>
		<p>ABV: <%%= abv %></p>
	</div>

	<div class="margin-container">
		<%% if (currentUser) {%>
			<h2 id="review-beer">Review Beer</h2>
		<%% } %>
	

	<%% if (currentUser) {%>
		<div class="artist-like-button">
			<button type="button" data-userid="<%%= currentUser.id %>" data-beerid="<%%= id %>" class="btn btn-default like-btn">Like Beer</button>
		</div>
	<%% } %>
	

	<%% if (description) {%>
		<h2>Description</h2>
		<p><%%= description %></p>
	<%% } %>
	</div>

	<div id="review-form" class="form-wrapper">
		<div class="form-group">
	    <label for="beerRating">Rating:</label>
	    <input style="width:60px;" class="form-control" type="number" step="1" min="1" max="5" id="beerRating" name="rating">
	  </div>
	  <div class="form-group">
	    <label for="beerReview">Review:</label>
	    <textarea class="form-control" name="review" rows="10" cols="50" id="beerReview"></textarea>
	  </div>
	  <div class="form-group">
	  	<input class="btn btn-success" id="review-btn" type="submit" value="Submit">
	  </div>
	</div>


</script>

