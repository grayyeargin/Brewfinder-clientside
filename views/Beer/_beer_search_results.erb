
<script type="text/template" id="beer-list-item-template">

	<%= erb :"navigation/_page_navigation" %>
	
	<nav class="pagination-nav">
	  <ul class="pager">

	  	<%% if (parseInt(collection.totalPages) > 1 && parseInt(collection.currentPage) === 1){ %>
	  		<li><a href="<%%= collection.url %>/<%%= collection.currentPage + 1 %>">Next Page</a></li>
	  	<%% } else if (collection.currentPage === collection.totalPages) { %>
	  		<li><a href="<%%= collection.url %>/<%%= collection.currentPage - 1 %>">Previous Page</a></li>
	  	<%% } else if (collection.totalPages === 0) { %>
	  		
	  	<%% } else  { %>
	  		<li><a href="<%%= collection.url %>/<%%= collection.currentPage - 1 %>">Previous</a></li>
	  		<li><a href="<%%= collection.url %>/<%%= collection.currentPage + 1 %>">Next</a></li>
	  	<%% } %>
 
	  </ul>
	</nav>

	<div class="search-statement">
		<h2><%%= collection.totalBeers %> results for '<%%= collection.query %>'</h2>
	</div>

	<table class="table table-striped">
		 <TR>
      <TH>Beer</TH>
      <TH>Brewery</TH>
      <TH>Style</TH>
      <TH>ABV</TH>
   	</TR>
  <%% collection.each(function(beer){  %>
  	<TR>
     	<TD><a href="/#beers/<%%= beer.get('id') %>"><%%= beer.get("name") %></a></TD>
      <TD><a href="/#breweries/<%%= beer.get('brewery_id') %>"><%%= beer.get("brewery_name") %></a></TD>
      <TD><%%= beer.get("style") %></TD>
      <TD><%%= beer.get("abv") %></TD>
   	</TR>
  <%% }) %>
  </table>

  <nav class="pagination-nav">
	  <ul class="pager">

	  	<%% if (parseInt(collection.totalPages) > 1 && parseInt(collection.currentPage) === 1){ %>
	  		<li><a href="<%%= collection.url %>/<%%= collection.currentPage + 1 %>">Next Page</a></li>
	  	<%% } else if (collection.currentPage === collection.totalPages) { %>
	  		<li><a href="<%%= collection.url %>/<%%= collection.currentPage - 1 %>">Previous Page</a></li>
	  	<%% } else if (collection.totalPages === 0) { %>
	  		
	  	<%% } else  { %>
	  		<li><a href="<%%= collection.url %>/<%%= collection.currentPage - 1 %>">Previous</a></li>
	  		<li><a href="<%%= collection.url %>/<%%= collection.currentPage + 1 %>">Next</a></li>
	  	<%% } %>
 
	  </ul>
	</nav>



</script>