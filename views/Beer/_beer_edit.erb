<script type="text/template" id="beer-edit-template">

<%= erb :"navigation/_page_navigation" %>

<div class="container">
	<div class="form-wrapper">
		<div class="form-group">
	    <label for="beerName">Name:</label>
	    <input class="form-control" id="beerName" name="name" value="<%%= name %>">
	  </div>
	  <div class="form-group">
	    <label for="beerStyle">Style:</label>
	    <input class="form-control" id="beerStyle" name="style" value="<%%= style %>">
	  </div>
	  <div class="form-group">
	    <label for="beerImage">Image:</label>
	    <input class="form-control" id="beerImage" name="image" value="<%%= image %>">
	  </div>
	  <div class="form-group">
	    <label for="beerABV">ABV:</label>
	    <input type="number" step=".1" class="form-control" id="beerABV" name="abv" value="<%%= abv %>">
	  </div>
	  <div class="form-group">
	    <label for="beerDescription">Description:</label>
	    <textarea class="form-control" name="description" rows="10" cols="50" id="beerDescription"><%%= description %></textarea>
	  </div>
	  <div class="form-group">
	  	<input class="btn btn-success" id="edit-btn" type="submit" value="Submit">
	  </div>
	</div>
</div>

</script>